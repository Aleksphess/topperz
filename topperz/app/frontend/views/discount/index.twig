{% set mnths = ['','января','февраля','марта','апреля','мая','июня','июля','августа','сентября','октября','ноября','декабря'] %}

<nav class="breadcrumbs">
    <div class="container"><a class="breadcrumbs__item" href="{{ Url.home() }}">Главная</a><a class="breadcrumbs__item" href="specials.html">Акции</a>
    </div>
</nav>
<main class="page__inner">
    <div class="container">
        <h1 class="page__title">Акции</h1>
        <div class="row">
            {% for discount in discounts %}
            <div class="col col--6-of-12 col--s-12-of-12 col--m-12-of-12 col--l-6-of-12">
                <div class="special-item">
                    <div class="special-item__date">
                        <div class="special-item__date-day">{{ discount.date|date('d') }}</div>
                        <div class="special-item__date-month">{{ mnths[discount.date|date('n')] }}</div>
                    </div><a class="special-item__photo" href="{{ discount.url }}"><img src="{{ discount.simg }}" alt=""></a>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</main>
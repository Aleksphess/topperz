                            <li class="franchise-info__properties-item"> <span>Комментарии о франшизе: </span><strong>191</strong><a href="">Все комментарии</a></li>
#}
                        </ul>
                        <div class="franchise-info__action"><a class="btn btn--primary" href="{{ Url.to('/user/edit/lot/') }}{{ lot.alias }}">Редактировать франшизу</a></div>
                    </div>
                </div>
            </div>
        </div>
        <hr class="section__divider">
        <div class="section__action"><a class="btn btn--primary btn--lg" href="{{ Url.to('/user/create/lot') }}">Добавить франшизу</a></div>
    </div>
</section>
